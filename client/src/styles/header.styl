#header {
  background: #EC407A;
  height: 60px;
  width: 100%;
  color: white;
  text-align: right;
  letter-spacing: 1px;
  margin-bottom: 20px;
  padding-right: 0px;
  line-height: 60px;

  a {color: white;padding-left: 40px;}
  h1 { position: absolute; left: 40px; line-height: 60px;text-align: left; font-size: 32px; font-weight: 300; letter-spacing: 4px;}
}
#header button {color: #fff;
  background-color: #d9534f;
  border-color: #d9534f;
  border: 1px solid transparent;
  padding: .5rem 1rem;
  font-size: 1rem;
  border-radius: .25rem;
  font-weight: 400;
  line-height: 1.25;
  text-align: center;
  white-space: nowrap;
  vertical-align: middle;
  margin-left: 4px;
  height: 60px;
}

#header button.logout{
  margin-left: 30px;
  display:none;
}

#header .dropdown{
  position: relative;
}

button.logout{display: none; position: absolute}

 #header .dropdown:hover button.logout{
   display:block;
   right: 0;
   text-align:right;
   padding: .75em 1.25em 1em;
   line-height: 1;
   margin-left: 0;
   background: #EC407A;
   border-radius: 0;
   height: 60px;
   background-color: #ec407a;
   &:hover{background-color: #E91E63}

 }
 #welcome{padding:0 1.5em}
 .dropdown:hover #welcome{
   background-color: #E91E63;
 }

.searchBar {
  block: display;
  float: left;
  height: 60px;
}

.logout {
  margin-left: 20px;
}

#title{position: absolute}
